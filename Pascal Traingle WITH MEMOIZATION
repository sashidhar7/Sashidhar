import java.util.Arrays;

public class PascalTriangleMemoization {
    private static int[][] memo;

    public static void main(String[] args) {
        int numRows = 5;
        memo = new int[numRows + 1][numRows + 1];
        generatePascalTriangle(numRows);

        for (int i = 0; i <= numRows; i++) {
            for (int j = 0; j <= i; j++) {
                System.out.print(memo[i][j] + " ");
            }
            System.out.println();
        }
    }

    public static int generatePascalTriangle(int row, int col) {
        if (memo[row][col] != 0) {
            return memo[row][col];
        }
        
        if (col == 0 || col == row) {
            memo[row][col] = 1;
        } else {
            memo[row][col] = generatePascalTriangle(row - 1, col - 1) + generatePascalTriangle(row - 1, col);
        }
        
        return memo[row][col];
    }

    public static void generatePascalTriangle(int numRows) {
        for (int i = 0; i <= numRows; i++) {
            generatePascalTriangle(i, 0);
        }
    }
}
