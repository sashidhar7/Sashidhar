public class PascalTriangleRecursion {
    public static void main(String[] args) {
        int numRows = 5;
        
        for (int i = 0; i < numRows; i++) {
            for (int j = 0; j <= i; j++) {
                System.out.print(computePascalValue(i, j) + " ");
            }
            System.out.println();
        }
    }

    public static int computePascalValue(int row, int col) {
        if (col == 0 || col == row) {
            return 1;
        } else {
            return computePascalValue(row - 1, col - 1) + computePascalValue(row - 1, col);
        }
    }
}
